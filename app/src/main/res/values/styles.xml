<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/montserrat</item>

    </style>

    <style name="bio_text" parent="normal_text">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="normal_text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="h1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundColor">?attr/colorPrimary</item>
        <item name="android:paddingVertical" tools:targetApi="o">10sp</item>
    </style>

    <style name="button2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#707070</item>
        <item name="backgroundTint">@color/colorField</item>
        <item name="android:paddingVertical" tools:targetApi="o">15sp</item>
    </style>

    <style name="hero" parent="h1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="inputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorField</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginBottom">15sp</item>
    </style>

    <style name="inputField2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/colorField</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginBottom">15sp</item>
    </style>

    <style name="inputField3" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/colorField</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginBottom">15sp</item>
    </style>

    <style name="label">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <style name="caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="cardInfo" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">15sp</item>
        <item name="cardElevation">4dp</item>
    </style>


</resources>